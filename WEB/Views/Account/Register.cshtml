
@{
    Layout = "../Shared/_Layout.cshtml";
    ViewBag.Title = "Регистрация";
}

@model WEB.Models.Account.RegistrationModel
@{
    Html.EnableClientValidation(true);
}

<title>Регистрация пользователя</title>

<div class="container" style="margin-top: 30px;">

    <hr/>
    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
    {
        <div class="form-group">
            @Html.LabelFor(t => t.Login, new {@class = "col-sm-2 control-label"})
            <div class="col-sm-10">
                @Html.TextBoxFor(t => t.Login, new {@class = "form-control", placeholder = "Логин"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(t => t.Password, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.PasswordFor(t => t.Password, new { @class = "form-control", placeholder = "Пароль" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(t => t.ConfirmPassword, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.PasswordFor(t => t.ConfirmPassword, new { @class = "form-control", placeholder = "Подтвердите пароль" })
                @Html.ValidationMessageFor(t => t.ConfirmPassword, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="">Почтовый адрес:</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" name="Email" placeholder="Email">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="">Имя:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="Name" placeholder="Имя">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="">Фамилия:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="Surname" placeholder="Фамилия">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="">Отчество:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="Patronymic" placeholder="Отчество">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="">Университет:</label>
            <div class="col-sm-10">
                <select class="form-control" name="University">
                    <option>Сибирский Федеральный Университет</option>
                    <option>Красноярский Государственный Аэрокосмический Университет</option>
                    <option>Красноярский Аграрный Университет</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="">Группа:</label>
            <div class="col-sm-10">
                <select class="form-control" name="Group">
                    <option>КИ14-17Б</option>
                    <option>КИ14-16Б</option>
                    <option>КИ14-15Б</option>
                </select>
            </div>
        </div>

        @*<div class="form-group">
                <label class="col-sm-2 control-label" for="">Выберите изображение профиля:</label>
                <div class="col-sm-10">
                    <input type="file" class="form-control" name="Avatar" placeholder="Выберите файл">
                    <p class="help-block">Размер файла не должен превышать 1 МБ.</p>
                </div>
            </div>*@

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-success">Зарегистрироваться</button>
            </div>
        </div>
    }
</div>

<script type="text/javascript">
    function ValidateForm() {
        $('registration_form')
            .validate({
                Login: {
                    rangelength: [7 - 21],
                    required: true
                }
            });

    }
</script>
