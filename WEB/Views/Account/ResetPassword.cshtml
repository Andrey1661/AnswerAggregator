
@{
    ViewBag.Title = "ResetPassword";
}
@model WEB.Models.Account.ResetPasswordModel

<h2>Сброс пароля</h2>

@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post))
{
    @Html.HiddenFor(t => t.PasswordResetToken)
    @Html.ValidationMessage("Summary", "", new {@class = "text-danger"})
    
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(t => t.NewPassword, new {@class = "control-label"})
                @Html.PasswordFor(t => t.NewPassword, new {@class = "form-control"})
                <div>
                    @Html.ValidationMessageFor(t => t.NewPassword, "", new {@class = "text-danger"})
                </div>
            </div>

            <div class="form-group">                
                <input type="submit" class="btn btn-success" value="Сменить пароль"/>
            </div>
        </div>
    </div>
}

