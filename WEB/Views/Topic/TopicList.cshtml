
@{
    ViewBag.Title = "TopicList";
}
@model IEnumerable<WEB.Models.Topic.TopicViewModel>

<h2>Список тем</h2>

<style>
    
    .topic-block {
        padding: 5px;
        background: lightgray;
        box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.5);
        border-radius: 5px;
        margin-bottom: 15px;
    }

    .topic-block > span {
        margin-right: 15px;
    }

    .topic-block:hover {
        background: #444444;
    }

    .topic-container > a {
        text-decoration: initial;
        color: initial;
    }

</style>

<div class="row">
    <div class="col-md-9 topic-container">
        @foreach (var item in Model)
        {
            <a href="@Url.Action("Topic", "Topic", new {topicId = item.Id})">
                <div class="topic-block">
                    <span><strong>@item.Title</strong></span>
                    <span>Добавлено: @item.CreationDate.ToLongDateString()</span>
                    <span>Автор: @item.Author.UserName</span>
                </div>
            </a>
        }
    </div>
</div>
<div class="row">
    <div class="col-md-3">
        @Html.ActionLink("Создать тему", "Create", "Topic", new {subjectId = (Guid)ViewBag.SubjectId}, new {@class = "btn btn-default"})
    </div>
</div>