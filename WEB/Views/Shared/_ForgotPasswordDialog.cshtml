
@model String

<div>

    @using (@Html.BeginForm("ForgotPassword", "Account", FormMethod.Post))
    {
        <a href="#" class="modal-close">X</a>
        <div>
            <p>
                Введите Email, на который мы отправим сообщение со ссылкой на страницу смены пароля
            </p>
        </div>

        <div class="form-group">
            @Html.TextBox("loginOrEmail", Model, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-default" value="Отправить" />
        </div>
    }

</div>