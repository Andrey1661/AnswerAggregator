@using WEB.Models.Account
@model LoginModel

@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    @Html.HiddenFor(t => t.ReturnUrl, Request.Url.PathAndQuery)

    <div class="login-textbox-block">
        <div class="form-group">
            <div class="col-sm-10">
                @Html.TextBoxFor(t => t.UserName, new {@class = "form-control", placeholder = "Имя пользователя или Email"})
            </div>
            <div>
                @Html.ValidationMessageFor(t => t.Password, "", new {@class= "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-10">
                @Html.PasswordFor(t => t.Password, new { @class = "form-control", placeholder = "Пароль" })
            </div>
            <div class="col-sm-10">
                <a href="#forgot-password">Забыли пароль?</a>
            </div>
        </div> 
    </div>
    
    <div class="form-group">
        <div class="col-sm-10">
            @Html.CheckBoxFor(t => t.RememberMe)
            @Html.LabelFor(t => t.RememberMe)
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-10">
            <input type="submit" value="Войти" class="btn btn-success"/>
        </div>
        <div class="col-sm-10">
            @Html.ActionLink("Зарегистрироваться", "Register", "Account")
        </div>
    </div>
}

<div id="forgot-password" class="modal-window">
    @Html.Partial("_ForgotPasswordDialog", new ForgotPasswordModel())
</div>

<script>

    $(document).ready(function() {

    });

</script> 


